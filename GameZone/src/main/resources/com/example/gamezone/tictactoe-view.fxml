<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: #d0e6ff;"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.gamezone.TicTacToeController">

    <GridPane alignment="CENTER" hgap="5" vgap="5">
        <Button fx:id="btn00" onAction="#makeMove" prefWidth="50" prefHeight="50"/>
        <Button fx:id="btn01" onAction="#makeMove" prefWidth="50" prefHeight="50" GridPane.columnIndex="1"/>
        <Button fx:id="btn02" onAction="#makeMove" prefWidth="50" prefHeight="50" GridPane.columnIndex="2"/>

        <Button fx:id="btn10" onAction="#makeMove" prefWidth="50" prefHeight="50" GridPane.rowIndex="1"/>
        <Button fx:id="btn11" onAction="#makeMove" prefWidth="50" prefHeight="50" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button fx:id="btn12" onAction="#makeMove" prefWidth="50" prefHeight="50" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

        <Button fx:id="btn20" onAction="#makeMove" prefWidth="50" prefHeight="50" GridPane.rowIndex="2"/>
        <Button fx:id="btn21" onAction="#makeMove" prefWidth="50" prefHeight="50" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Button fx:id="btn22" onAction="#makeMove" prefWidth="50" prefHeight="50" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
    </GridPane>

    <Label fx:id="winnerLabel" text="The winner is:"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Reset" onAction="#resetGame"/>
        <Button text="Back To Home" onAction="#backToHome"/>
    </HBox>
</VBox>
